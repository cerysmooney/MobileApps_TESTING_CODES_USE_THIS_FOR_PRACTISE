<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/namePageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB800" >

<!--Owl vector-->
    <!--Next button-->

    <ImageView
        android:id="@+id/owl_images"
        android:layout_width="429dp"
        android:layout_height="657dp"
        android:contentDescription="@null"
        android:src="@drawable/questionowl"
        app:layout_constraintBottom_toBottomOf="@+id/enterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="164dp"
        android:layout_height="83dp"
        android:textSize="30sp"
        android:background="@drawable/button_background_white"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />
<!--Place for users to input their name-->
    <EditText
        android:id="@+id/enterName"
        android:layout_width="706dp"
        android:layout_height="90dp"
        android:textSize="36sp"
        android:background="#C2FBFBFB"
        android:ems="10"
        android:autofillHints="@null"
        android:maxLength="13"
        android:hint="@string/type_your_name_here"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

<!--Max Character length-->
    <TextView
        android:id="@+id/maxCharacter"
        android:layout_width="140dp"
        android:layout_height="26dp"
        android:text="@string/max_character"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/enterName"
        app:layout_constraintEnd_toEndOf="@+id/enterName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/enterName"
        app:layout_constraintTop_toTopOf="@+id/enterName"
        app:layout_constraintVertical_bias="1.0" />

<!--Header-->
    <!--Back to previous page button-->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_s_your_name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <!--Skip name page button-->
    <Button
        android:id="@+id/emotionButton"
        android:layout_width="164dp"
        android:layout_height="83dp"
        android:background="@drawable/button_background_dark"
        android:text="@string/back"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/skipToHomeButton"
        android:layout_width="164dp"
        android:layout_height="83dp"
        android:textSize="30sp"
        android:text="@string/skip"
        android:background="@drawable/button_background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />




</androidx.constraintlayout.widget.ConstraintLayout>