<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homePageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/happy"
    tools:context=".HomePage">

<!-- Header-->
    <TextView
        android:id="@+id/intro"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="@string/hello"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />
<!--Display date and time-->
    <TextView
        android:id="@+id/dateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/intro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/intro"
        app:layout_constraintTop_toBottomOf="@+id/intro" />
<!--Expand on feelings section-->
    <!--Button to go to Expand on Feelings Page-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="390dp"
        android:layout_height="163dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_textbox"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/expand_on_your_feelings"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imagePlusIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/plusicon"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />
<!--Section colour divider to distinguish expand on feelings from goals section-->
    <ImageView
        android:id="@+id/goalsPageBG"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:background="@drawable/transparent_white_box"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

<!--Checklist-->

    <!--Button to go to Goals Page-->

    <!--Example goals-->


    <!--Example of how user can add their own goal-->

    <!--Nav bar components-->

    <ImageButton
        android:id="@+id/imageCross"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cross"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goalsPageBG"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.179" />

    <ImageButton
        android:id="@+id/imageCross2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cross"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goalsPageBG"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.353" />

    <ImageButton
        android:id="@+id/imageCross3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/cross"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.042" />

    <ImageButton
        android:id="@+id/goalsPageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/go"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goalsPageBG"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.694" />

    <TextView
        android:id="@+id/goalsPageGoal1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_white_box"
        android:elevation="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/make_your_bed"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/goalsPageGoal2"
        app:layout_constraintEnd_toStartOf="@+id/imageCross"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.882" />

    <TextView
        android:id="@+id/goalsPageGoal2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_white_box"
        android:elevation="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/message_a_friend"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/goalsPageGoal3"
        app:layout_constraintEnd_toStartOf="@+id/imageCross2"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/goalsPageGoal3"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_white_box"
        android:elevation="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/brush_your_teeth"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/goalsPageAddYourOwn"
        app:layout_constraintEnd_toStartOf="@+id/imageCross3"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.961" />

    <TextView
        android:id="@+id/goalsPageAddYourOwn"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/transparent_white_box"
        android:elevation="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/add_your_own"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goalsPageButton"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/goalsPageBG"
        app:layout_constraintTop_toTopOf="@+id/goalsPageBG"
        app:layout_constraintVertical_bias="0.694" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="430dp"
        android:layout_height="67dp"
        android:background="@drawable/only_top_rounded_textbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
<!--Nav icon to go to sound page-->
    <ImageButton
        android:id="@+id/soundPageButtonNav"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:background="@drawable/baseline_volume_up_24"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
<!--Nav icon for home page-->
    <ImageButton
        android:id="@+id/homePageButtonNav"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/owlhead"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
<!--Nav icon for goals page-->
    <ImageButton
        android:id="@+id/goalsPageButtonNav"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:background="@drawable/baseline_checklist_rtl_24"
        android:elevation="10dp"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />




</androidx.constraintlayout.widget.ConstraintLayout>


