<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sound_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/okay"
    tools:context=".SoundPage">
    <!--Header-->
    <TextView
        android:id="@+id/title"
        android:layout_width="371dp"
        android:layout_height="79dp"
        android:text="@string/need_to_relax"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />
    <!--Subhead-->
    <TextView
        android:id="@+id/header"
        android:layout_width="371dp"
        android:layout_height="79dp"
        android:text="@string/here_s_some_sounds_we_think_you_ll_enjoy"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <!--Sound Buttons-->

    <ImageButton
        android:id="@+id/playSoundHappy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_circle_awesome"
        android:contentDescription="@string/playsoundhappy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />


    <ImageButton
        android:id="@+id/playSoundOkay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_circle_okay"
        android:contentDescription="@string/playsoundokay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <ImageButton
        android:id="@+id/playSoundSad"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_circle_awful"
        android:contentDescription="@string/playsoundsad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />


    <!--Stop playing music button-->
    <Button
        android:id="@+id/stopButton"
        android:layout_width="109dp"
        android:layout_height="52dp"
        android:background="@drawable/button_background_dark"
        android:text="@string/stop_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />
    <!--Back to home page button-->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="109dp"
        android:layout_height="52dp"
        android:background="@drawable/button_background_dark"
        android:text="@string/to_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />
    <!--Owl vector-->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="310dp"
        android:layout_height="314dp"
        android:background="@drawable/branchowl"
        android:contentDescription="@string/branchowl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848" />

    <!--Nav Bar contents-->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="430dp"
        android:layout_height="67dp"
        android:background="@drawable/only_top_rounded_textbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <!--Nav icon for sound page (greyed out to show they're on that page)-->
    <ImageButton
        android:id="@+id/soundPageButtonNav"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:background="@drawable/baseline_volume_up_24_highlight"
        android:contentDescription="@string/soundpagenav"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
    <!--Nav icon for home page-->
    <ImageButton
        android:id="@+id/homePageButtonNav"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/owlheadokay"
        android:contentDescription="@string/homepagenav"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />
    <!--Nav icon for goals page-->
    <ImageButton
        android:id="@+id/goalsPageButtonNav"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:background="@drawable/baseline_checklist_rtl_24"
        android:contentDescription="@string/goalspagenav"
        android:elevation="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>