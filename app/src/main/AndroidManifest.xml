<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mobileapps_testing_codes_use_this_for_practise">

    <supports-screens
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/owl_head"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/owl_head_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE"
        tools:targetApi="31">
        <activity
            android:name=".SoundPage"
            android:exported="false"
            android:label="@string/title_activity_sound_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />

        <activity
            android:name=".ReflectionPage"
            android:exported="false"
            android:label="@string/title_activity_reflection_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".ExpandOnFeelingsPage"
            android:exported="false"
            android:label="@string/title_activity_expand_on_feelings_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".HomePage"
            android:exported="false"
            android:label="@string/title_activity_home_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".GoalsPage"
            android:exported="false"
            android:label="@string/title_activity_goals_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".NamePage"
            android:exported="false"
            android:label="@string/title_activity_name_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".CalendarPage"
            android:exported="false"
            android:label="@string/title_activity_calendar_page"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MobileApps_TESTING_CODES_USE_THIS_FOR_PRACTISE" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>